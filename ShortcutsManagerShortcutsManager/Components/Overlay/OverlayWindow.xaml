<Window x:Class=" ShortcutsManager.Components.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="300"
        Height="100"
        ResizeMode="NoResize">
    <Border Background="#CC000000" CornerRadius="12" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="MessageText" 
                   Foreground="White"
                   FontSize="18"
                   TextWrapping="Wrap"
                   TextAlignment="Center" />
    </Border>
</Window>
